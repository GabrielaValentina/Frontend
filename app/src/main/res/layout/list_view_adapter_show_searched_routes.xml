<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
   >

    <TextView
        android:id="@+id/textViewIdTrainSEARCHEDROUTESADAPTER"
        android:layout_width="93dp"
        android:layout_height="177dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="176dp"
        android:layout_weight="0.99"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDepartureAndestinationSEARCHEDROUTESADAPTAER"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="\n TextView"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <LinearLayout

            android:layout_width="280dp"
            android:layout_height="104dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewDepatureTimeSEARCHEDROUTESADAPTER"
                android:layout_width="100dp"
                android:layout_height="91dp"
                android:text="\nTextView"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_weight="1.22" />

            <TextView
                android:id="@+id/textViewArrivalTimeSEARCHEDROUTESADAPTER"
                android:layout_width="150dp"
                android:layout_height="91dp"
                android:text="\nTextView"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>