<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="#C8C8C8">

        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="254dp"
            android:layout_height="649dp"
            android:fontFamily="cursive"
            android:text="\n Înregistrare"
            android:textAlignment="center"
            android:textColor="#900C3F"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="65dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="262dp"
            android:background="@android:drawable/sym_action_email"
            android:backgroundTint="#900C3F"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewPassword"
            android:layout_width="68dp"
            android:layout_height="43dp"
            android:background="@android:drawable/ic_lock_idle_lock"
            android:backgroundTint="#900C3F"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="329dp" />

        <ImageView
            android:id="@+id/imageViewPhone"
            android:layout_width="72dp"
            android:layout_height="37dp"
            android:background="@android:drawable/stat_sys_speakerphone"
            android:backgroundTint="#900C3F"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="402dp"
            app:layout_constraintHorizontal_bias="0.027" />

        <ImageView
            android:id="@+id/imageViewMiddleName"
            android:layout_width="63dp"
            android:layout_height="44dp"
            android:background="@drawable/user"
            android:backgroundTint="#900C3F"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonRegister"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintVertical_bias="0.224" />

        <ImageView
            android:id="@+id/imageViewName"
            android:layout_width="63dp"
            android:layout_height="44dp"
            android:background="@drawable/user"
            android:backgroundTint="#900C3F"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonRegister"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintVertical_bias="0.398" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="316dp"
            android:layout_height="34dp"
            android:background="#900C3F"
            android:onClick="buttonRegister"
            android:text="Înregistrare"
            android:textColor="@android:color/background_light"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textViewRegister"
            android:layout_marginBottom="143dp" />

        <EditText
            android:id="@+id/editTextLastNameREGISTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nume"
            android:textStyle="italic"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp" />

        <EditText
            android:id="@+id/editTextFirstNameREGISTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Prenume"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="179dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.627" />


        <EditText
            android:id="@+id/editTextPasswordREGISTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Parolă"
            android:textStyle="italic"
            android:layout_marginLeft="104dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="329dp" />

        <EditText
            android:id="@+id/editTextEmailREGISTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="email@yahoo.com"
            android:textStyle="italic"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewRegister"
            android:layout_marginTop="262dp"
            app:layout_constraintHorizontal_bias="0.627" />

        <EditText
            android:id="@+id/editTextPhoneNumberREGISTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:text="0743117867"
            android:textStyle="italic"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="402dp"
            app:layout_constraintHorizontal_bias="0.627" />

    </android.support.constraint.ConstraintLayout>
