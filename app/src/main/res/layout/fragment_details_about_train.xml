<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C8C8"
    tools:context="com.example.gabri.licentafrontend.Fragments.DetailsAboutTrainFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0E0E0"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="#E0E0E0"
                android:fontFamily="cursive"
                android:text="\n Statii"
                android:textAlignment="center"
                android:textColor="#900C3F"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_weight="0.08"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="125dp"
                    android:layout_height="51dp"
                    android:background="#E0E0E0"
                    android:fontFamily="cursive"
                    android:text=" \n Statia"
                    android:textAlignment="center"
                    android:textColor="#900C3F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="147dp"
                    android:layout_height="51dp"
                    android:fontFamily="cursive"
                    android:text="\n Sosire"
                    android:textAlignment="center"
                    android:textColor="#900C3F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:fontFamily="cursive"
                    android:text="\n Plecare"
                    android:textAlignment="textStart"
                    android:textColor="#900C3F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <ListView
                android:id="@+id/listViewSTATIONS"
                android:layout_width="372dp"
                android:layout_height="254dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="152dp"
                    android:layout_height="66dp"
                    android:layout_weight="0.71"
                    android:fontFamily="cursive"
                    android:text="Seteaza alarma:"
                    android:textAlignment="center"
                    android:textColor="#900C3F"
                    android:textSize="30sp"
                    android:textStyle="bold|italic" />

                <ImageButton
                    android:id="@+id/imageButtonMakeReviewTrainDetailsFRAGMENT"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.14"
                    android:scaleType="fitCenter"
                    android:tint="#900C3F"
                    app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="152dp"
                    android:layout_height="66dp"
                    android:layout_weight="0.73"
                    android:fontFamily="cursive"
                    android:text="Spune-ti parerea"
                    android:textAlignment="center"
                    android:textColor="#900C3F"
                    android:textSize="30sp"
                    android:textStyle="bold|italic" />

                <ImageButton
                    android:id="@+id/imageButtonReviewDETAILSFRAGMENT"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.14"
                    android:tint="#900C3F"
                    app:srcCompat="@android:drawable/btn_star_big_on" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
